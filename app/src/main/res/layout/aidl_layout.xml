<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_bind_service"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定服务"/>
    <Button
        android:id="@+id/btn_add_listener"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_bind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加监听"/>
    <Button
        android:id="@+id/btn_exit_app"
        app:layout_constraintLeft_toRightOf="@id/btn_add_listener"
        app:layout_constraintTop_toTopOf="@id/btn_add_listener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭应用"/>


</androidx.constraintlayout.widget.ConstraintLayout>