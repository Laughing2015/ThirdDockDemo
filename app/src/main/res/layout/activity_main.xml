<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_book_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="200dp"
        android:text="书本Id"
        android:textColor="@color/color_6249EE"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.kingsun.thirddock.widget.TVEditText
        android:id="@+id/et_book_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="28"
        android:inputType="number"
        android:textColor="@color/color_6249EE"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_book_id"
        app:layout_constraintTop_toTopOf="@+id/tv_book_id"
        app:layout_constraintBottom_toBottomOf="@+id/tv_book_id" />
    <TextView
        android:id="@+id/tv_device_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="设备Id"
        android:textColor="@color/color_6249EE"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_book_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_id"/>
    <com.kingsun.thirddock.widget.TVEditText
        android:id="@+id/et_device_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textColor="@color/color_6249EE"
        android:textSize="25sp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:enabled="false"
        app:layout_constraintLeft_toRightOf="@+id/tv_device_id"
        app:layout_constraintTop_toTopOf="@+id/tv_device_id"
        app:layout_constraintBottom_toBottomOf="@+id/tv_device_id" />
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="下载"
        android:textColor="@color/color_FFFFFF"
        android:textSize="25sp"
        android:background="@drawable/common_circle_bg"
        app:layout_constraintTop_toBottomOf="@+id/et_device_id"
        app:layout_constraintLeft_toLeftOf="@+id/et_book_id"
        app:layout_constraintRight_toRightOf="@+id/et_book_id"/>
    <Button
        android:id="@+id/btn_open"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="直接打开"
        android:textColor="@color/color_FFFFFF"
        android:textSize="25sp"
        android:background="@drawable/common_circle_bg"
        app:layout_constraintTop_toBottomOf="@+id/btn_confirm"
        app:layout_constraintLeft_toLeftOf="@+id/et_book_id"
        app:layout_constraintRight_toRightOf="@+id/et_book_id"/>
    <TextView
        android:id="@+id/tv_load_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="下载中，请稍候..."
        android:textColor="@color/color_6249EE"
        android:textSize="14sp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/pb_progress"
        app:layout_constraintBottom_toTopOf="@+id/pb_progress"
        tools:ignore="UnusedAttribute" />
    <ProgressBar
        android:id="@+id/pb_progress"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:max="100"
        style="@style/CommonProgressbarStyle"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>